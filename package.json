{
    "name": "eth-date-to-block",
    "version": "0.2.0",
    "description": "A package to efficiently and accurately convert dates to Ethereum/L2 block numbers",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/types/index.d.ts",
                "default": "./lib/esm/index.mjs"
            },
            "require": {
                "types": "./lib/cjs/types/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        }
    },
    "types": "./lib/cjs/types/index.d.ts",
    "main": "./lib/cjs/index.js",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "clean": "rm -rf ./lib",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
        "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
        "test": "jest",
        "semantic-release": "semantic-release",
        "prepack": "npm run build",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kai-thompson/ethereum-date-to-block.git"
    },
    "keywords": [
        "npm",
        "javascript",
        "typescript",
        "esm",
        "cjs",
        "nodejs",
        "commonjs",
        "ecmascript",
        "blockchain",
        "ethereum",
        "eth",
        "date-converter"
    ],
    "author": "kai-thompson",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kai-thompson/ethereum-date-to-block/issues"
    },
    "homepage": "https://github.com/kai-thompson/ethereum-date-to-block#readme",
    "devDependencies": {
        "@ethersproject/abstract-provider": "^5.7.0",
        "@types/jest": "^29.1.2",
        "@types/web3": "^1.2.2",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "eslint": "^8.25.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "ethers": "^5.7.1",
        "jest": "^29.1.2",
        "prettier": "^2.7.1",
        "semantic-release": "^19.0.5",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "web3": "^1.8.0",
        "web3-eth": "^1.8.0"
    }
}
